<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_grid_text"
        android:layout_width="@dimen/grid_text_width"
        android:layout_height="match_parent"/>
    
    <RelativeLayout
        android:layout_width="@dimen/panel_width"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_grid_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/grid_padding_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true">

            <include
                android:id="@+id/layout_controlbar1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

            <include
                android:id="@+id/layout_controlbar10"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_controlbar" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>